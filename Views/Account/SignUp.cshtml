@model NewViews.Models.User
<div> 
 <h2>Create new account</h2>
       @using (Html.BeginForm("AddUser", "Account", FormMethod.Post))
        {
      <div align="center">@Html.ValidationSummary(true)
   <table width="500" border="0">
     <tr>
       <th width="153" height="50" scope="row">
          <h3 align="center"> @Html.LabelFor(m => m.First_Name)</h3></th>
           <td  width="252" height="50" > @Html.TextBoxFor(m => m.First_Name, new { id="FirstName"}) </td>
        <td  width="252" height="50" > @Html.ValidationMessageFor(m=>m.First_Name ) </td>
      <td  width="81" height="50" >&nbsp;</td>
    </tr>
       
    <tr>       
        <th width="153" height="50" scope="row">
             <h3 align="center"> @Html.LabelFor(m => m.Last_Name)     </h3></th> 
        <td width="252" height="50" > @Html.TextBoxFor(m => m.Last_Name,new { id="LastName"})</td>
         <td  width="252" height="50" > @Html.ValidationMessageFor(m=>m.Last_Name ) </td>
        <td width="81" height="50" >&nbsp;</td>
    </tr>

    <tr>
             <th width="153" height="50" scope="row"><h3> Email </h3></th> 
             <td width="252" height="50" >@Html.TextBoxFor(m => m.Email,new { id="Email"})
                  <td  width="252" height="50" > @Html.ValidationMessageFor(m=>m.Email) </td>
                  <td width="81" height="50" >&nbsp;</td>
             </td>
  </tr>
      
   <tr>
            <th width="153" height="50" scope="row"><h3>Password </h3></th> 
            <td width="252" height="50" >@Html.PasswordFor(m => m.Password,new { id="Password"})</td>
       <td  width="252" height="50" > @Html.ValidationMessageFor(m=>m.Password)   </td>
           <td width="81" height="50" >&nbsp;</td>
  </tr>
  <tr>
           <th width="153" height="50" scope="row"><h3>@Html.LabelFor(m => m.Address) </h3></th>
          <td width="252" height="50" >@Html.TextBoxFor(m => m.Address)</td>
      <td  width="252" height="50" > @Html.ValidationMessageFor(m=>m.Address)  </td>
          <td width="81" height="50" >&nbsp;</td>

  </tr>
       <tr>  <td></td>  
       <td>&nbsp<input name="submit" type="submit"  value="Sign Up"/></td>   
    </tr>
   </table>
    </div> 
       
          
                 }
        </div>

           @section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }
 @section cartTab{
        <div class="right_content">
   		<div class="shopping_cart">
        	<div class="cart_title style5">Shopping cart</div>
            
